{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    
   
      "title": "Australia main city population ",
    "width": 400,
    "height": 300,
  
     
    "projection": {"type": "equirectangular"},
    "data": {
      "url": "https://raw.githubusercontent.com/bob123245/3179-Week9-HomeWork/master/js/GCCSA_2021_AUST_GDA2020.topojson",
      "format": {"type": "topojson", "feature": "GCCSA_2021_AUST_GDA2020"}
    },
    
    "layer":[
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.GCC_NAME21", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
    "transform": [
      {
        "lookup": "properties.GCC_NAME21",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/bob123245/3179-Week9-HomeWork/master/Data/au.csv"
          },
          "key": "city",
          "fields": ["population_proper"]
        }
      }
    ],
    "mark": {"type": "geoshape","stroke": "black"},
    
    "encoding": {
      "color": {
        "field": "population_proper",
        "type": "quantitative",
        "scale": {
          "type": "threshold",
          "domain": [1000000, 2000000, 3000000],
          "range": [ "#bae4b3", "#74c476", "#31a354","#006d2c"]
        }
      },
      "tooltip": [
        {"field": "properties.GCC_NAME21", "type": "nominal", "title": "Country"},
        {"field": "population_proper", "type": "quantitative"}
      ]}
      }
    ]
}

    
